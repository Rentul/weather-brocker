<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://www.springframework.org/schema/beans ">

<context:component-scan base-package="ru.weatherbrocker.dbservice"/>

    <bean id="weatherService" class="service.weather.WeatherServiceImpl">
        <!-- any additional properties, maybe a DAO? -->
    </bean>

    <bean name="/WeatherService" class="org.springframework.remoting.caucho.HessianServiceExporter">
        <property name="service" ref="weatherService"/>
        <property name="serviceInterface" value="service.weather.WeatherService"/>
    </bean>

</beans>
